	<!-- oracle-->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="oracle.jdbc.driver.OracleDriver" />
		<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe" />
		<property name="username" value="babo" />
		<property name="password" value="baboda" />
	</bean>
	<bean id="sqlMapClient" class="org.springframework.orm.ibatis.SqlMapClientFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="WEB-INF/config/sql/ibatis/SqlMapConfig.xml" />
	</bean>

	<bean id="baseSqlMapClient" class="com.isfasiel.base.DAO.BaseSqlMapClient">
		<property name="sqlMapClient" ref="sqlMapClient"></property>
	</bean>
</beans>